<form action="/articles/post" method="POST">
    <div class="field">
        <label class="label">Name</label>
        <div class="control">
            {{!-- !!! ne pas oublier le name='name' pour l'arch du body !!! --}}
            <input class="input" type="text" name='title' placeholder="Text input">
        </div>
    </div>

    <div class="field">
        <label class="label">Message</label>
        <div class="control">
            {{!-- !!! ne pas oublier le name='content' pour l'arch du body !!! --}}
            <textarea class="textarea" name='content' placeholder="Textarea"></textarea>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            {{!-- !!! ne pas ouyblier le type='submit' pour la validation de l'envoie du formulaire !!! --}}
            <button type='submit' class="button is-link">Submit</button>
        </div>
        <div class="control">
            <button class="button is-link is-light">Cancel</button>
        </div>
    </div>
</form>